    "logs": "firebase-tools functions:log"
  },
  "engines": {
    "node": "18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.9.0",
    "stripe": "^14.11.0"
  },
  "devDependencies": {
    "typescript": "^5.2.2"
  },
  "private": true
}